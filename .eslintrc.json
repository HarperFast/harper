{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:radar/recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": ["radar", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "project": true,
    "ecmaVersion": 2019
  },
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "no-control-regex": "off",
    "no-case-declarations": "off",
    "radar/cognitive-complexity": ["error", 250],
    "radar/no-useless-catch": "off",
    "radar/no-identical-functions": "off",
    "radar/no-inverted-boolean-check": "off",
    "radar/no-duplicated-branches": "off",
    "radar/no-redundant-jump": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-var-requires": "off"
  }
}
